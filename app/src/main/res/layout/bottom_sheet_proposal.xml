<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/bottom_dialog_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Proposal Title"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:gravity="center_horizontal"
        android:paddingBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/vote_green_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:src="@drawable/thumbsup"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:contentDescription="Approve" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/vote_red_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/thumbsdown"
            android:backgroundTint="@color/white"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:contentDescription="Nope" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add_comment_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Comment"
        android:background="@drawable/button_rounded"
        android:fontFamily="@font/bloggersans"
        android:layout_margin="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/bottom_dialog_description_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full description"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:gravity="center_horizontal" />

    </ScrollView>

</LinearLayout>