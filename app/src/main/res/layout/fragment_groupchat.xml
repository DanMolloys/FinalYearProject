<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".GroupChatFragment">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonGroupChats"
        android:layout_width="220dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_background"
        android:drawableTop="@drawable/picture3"
        android:fontFamily="@font/bloggersans"
        android:text="Group Chats"
        android:textSize="35sp"
        android:gravity="bottom|center_horizontal"
        android:textColor="@android:color/black"
        android:layout_margin="16dp"
        android:paddingTop="16dp"
        android:drawablePadding="10dp"/>

    <TextView
        android:id="@+id/textDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="80dp"
        android:fontFamily="@font/bloggersans"
        android:gravity="center"
        android:text="Invite your friends to chat!Check out what they think of your plans"
        android:textColor="@android:color/black"
        android:textSize="30sp" />
</FrameLayout>
